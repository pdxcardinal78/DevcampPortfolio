<%= form_for(@portfolio_item) do |f| %>
<div class= "container">
  <div class = "row">
      <div class = "col-md-6">
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

            <div class="form-group">
            <%= f.label :subtitle %>
            <%= f.text_field :subtitle, class: 'form-control' %>
          </div>

            <div class = "form-group">
              <%= f.file_field :main_image %>
            </div>

            <div class = "form-group">
              <%= f.file_field :thumb_image %>
            </div>
        </div>

        <div class = "col-md-6">

          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control', rows: 13%>
          </div>
        </div>


        <hr>
      <div class = "col-md-12">
        <h1>Technologies Used</h1>
    
        <%= f.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
        <% end %>
        <div>
        <%= link_to_add_association 'Add Technology', f,  :technologies %>
        </div> 
      </div>

      <div class="form-group">
        <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

