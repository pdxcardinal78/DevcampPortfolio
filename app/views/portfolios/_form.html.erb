<div class= "container">
  <div class = "row">
    <div class = "col-md-6">

      <%= form_for(@portfolio_item) do |f| %>
        
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

        <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>

        <div class = "form-group">
          <%= f.file_field :main_image %>
        </div>

        <div class = "form-group">
          <%= f.file_field :thumb_image %>
        </div>
    </div>

    <div class = "col-md-6">

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 13%>
      </div>
    </div>


      <hr>
    <div class = "col-md-12">
      <h1>Technologies Used</h1>
      <ul>
        <%= f.fields_for :technologies do |technology_form| %>
        <li>
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: 'form-control' %>
        </li>
        <% end %>
        </ul>
    </div>


      <div class="form-group">
        <%= f.submit class:'btn btn-primary' %>
      </div>
      <% end %>

  </div>
</div>
